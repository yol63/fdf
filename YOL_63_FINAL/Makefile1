NAME = fdf

SRC  = ./sources/keys.c \
	./sources/fdf.c \
	./sources/check.c \
	./sources/ft_coor.c \
	./sources/mouse.c \
	./sources/ft_isdigite.c \
	./sources/base.c \
	./sources/helpers.c

OBJ  = $(SRC:.c=.o)

FLAGS = -Wall -Werror -Wextra -O3

OSVER := $(shell uname -s)

LIBFLAGS = -framework OpenGL -framework AppKit -lm -lmlx

LIBFT = libft/libft.a

INC_LIB = libft
	
HEAD = libft/libft.h

all: $(NAME)

$(NAME): $(OBJ) $(LIBFT)
	gcc $(FLAGS) $(OBJ) $(LIBFT) $(LIBFLAGS) -I$(INC_LIB) -o $(NAME)

$(LIBFT):
	make -C libft/


%.o : %.c
	gcc $(FLAGS) -c $< -o $@ -I$(INC_LIB)

clean:
	make -C libft clean
	rm -rf *.o

fclean: clean
	make -C libft fclean
	rm -rf $(OBJ)
	rm -rf $(NAME)
	
re: fclean all
